<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRUD Website</title>
    <!-- <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" /> -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav>
      <div class="flex justify-center p-4 bg-gray-700 text-xl">
        <a class="px-3 text-cyan-500" href="/">Home</a>
        <a class="px-3 text-white hover:text-cyan-500" href="/upload-file"
          >Upload File</a
        >
      </div>
    </nav>

    <div>
      <h1 class="text-5xl py-2 text-cyan-500 font-medium text-center">
        Users List
      </h1>
      <div class="flex justify-end items-center mr-10">
        <button
          class="show-modal-create-user bg-gradient-to-r from-cyan-500 to-teal-500 rounded-lg px-3 py-1 text-base cursor-pointer hover:bg-cyan-400 border border-slate-300"
        >
          Create a new user
        </button>
      </div>
    </div>

    <!-- <%#= dataUser %> -->

    <div class="py-5 h-fit px-10 overflow-auto rounded-lg">
      <table class="w-full">
        <thead class="bg-gray-50 border-2 border-gray-200">
          <tr class="w3-light-grey">
            <th class="p-3 text-sm font-semibold tracking-wide text-left">
              ID
            </th>
            <th class="p-3 text-sm font-semibold tracking-wide text-left">
              First Name
            </th>
            <th class="p-3 text-sm font-semibold tracking-wide text-left">
              Last Name
            </th>
            <th class="p-3 text-sm font-semibold tracking-wide text-left">
              Email
            </th>
            <th class="p-3 text-sm font-semibold tracking-wide text-left">
              Address
            </th>
            <th class="p-3 text-sm font-semibold tracking-wide text-left">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% for(let i = 0; i < dataUser.length; i++) { %>
          <tr class="">
            <td
              class="p-3 text-sm text-gray-700 whitespace-nowrap border-b-2 border-l-2"
            >
              <%= dataUser[i].userID %>
            </td>
            <td class="p-3 text-sm text-gray-700 whitespace-nowrap border-b-2">
              <%= dataUser[i].firstName %>
            </td>
            <td class="p-3 text-sm text-gray-700 whitespace-nowrap border-b-2">
              <%= dataUser[i].lastName %>
            </td>

            <td class="p-3 text-sm text-gray-700 whitespace-nowrap border-b-2">
              <%= dataUser[i].email %>
            </td>
            <td class="p-3 text-sm text-gray-700 whitespace-nowrap border-b-2">
              <%= dataUser[i].address %>
            </td>
            <td
              class="p-3 text-sm text-gray-700 whitespace-nowrap border-b-2 border-r-2"
            >
              <!-- <input
                class="font-bold text-blue-500 hover:underline"
                type="button"
                value="Detail"
              /> -->
              <form
                action="/get-edit-user/<%#= dataUser[i].userID %>"
                method="GET"
              >
                <input
                  class="show-modal-edit-user font-bold text-blue-500 hover:underline"
                  type="submit"
                  value="Edit"
                />
              </form>
              <form action="/delete-user" method="POST">
                <input
                  type="text"
                  name="userID"
                  value="<%#= dataUser[i].userID %>"
                  hidden
                />
                <input
                  class="font-bold text-blue-500 hover:underline"
                  type="submit"
                  value="Delete"
                />
                <!-- <button type="submit">Delete</button> -->
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- modal container create a new user -->

    <!-- modal container edit user -->
    <div
      class="modal-container-edit-user h-screen w-full fixed left-0 top-0 flex justify-center items-center bg-black bg-opacity-50"
    >
      <div
        class="modal-edit-user bg-slate-100 rounded-lg border border-slate-300 shadow-2xl"
      >
        <form action="/post-edit-user" method="POST">
          <div class="flex justify-between items-center">
            <div class="ml-4 text-3xl">Edit user</div>
            <button
              type="button"
              class="close-modal-edit-user text-red-400 text-xl m-4 hover:text-red-700"
            >
              &cross;
            </button>
          </div>
          <div class="mx-16 my-5">
            <div class="flex justify-between">
              <div class="">
                <!-- <label for="first-name">First Name</label> -->
                <input
                  class="border border-slate-300 rounded-md py-2 pl-9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-1 sm:text-base"
                  type="text"
                  name="firstName"
                  id="first-name"
                  value="<%= dataUserSelected.firstName %>"
                  placeholder="First Name"
                  size="12"
                />
              </div>
              <div class="ml-3">
                <!-- <label for="last-name">Last Name</label> -->
                <input
                  class="border border-slate-300 rounded-md py-2 pl-9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-1 sm:text-base"
                  type="text"
                  name="lastName"
                  id="last-name"
                  value="<%= dataUserSelected.lastName %>"
                  placeholder="Last Name"
                  size="12"
                />
              </div>
            </div>
            <div class="mt-3">
              <!-- <label for="email">Email</label> -->
              <input
                class="border border-slate-300 rounded-md py-2 pl-9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-1 sm:text-base"
                type="email"
                name="email"
                id="email"
                value="<%= dataUserSelected.email %>"
                placeholder="Email"
                size="36"
              />
            </div>
            <div class="mt-3">
              <!-- <label for="address">Address</label> -->
              <input
                class="border border-slate-300 rounded-md py-2 pl-9 pr-3 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-1 sm:text-base"
                type="text"
                name="address"
                id="address"
                value="<%= dataUserSelected.address %>"
                placeholder="Address"
                size="36"
              />
            </div>
          </div>
          <input
            type="text"
            name="userID"
            value="<%= dataUserSelected.userID %>"
            hidden
          />
          <div class="flex justify-center items-center m-3">
            <input
              class="btn-edit-user bg-cyan-300 rounded-lg px-5 py-3 text-lg cursor-pointer hover:bg-cyan-400 border border-slate-300"
              type="submit"
              value="Submit"
            />
          </div>
        </form>
      </div>
    </div>

    <script src="/js/client.js"></script>
  </body>
</html>
